package hangman

import "math/rand"

func DisplayBaseWord(word string, amount int) {
	display := make([]rune, len(hiddenWord))
	for i := range display {
		display[i] = '_'
	}

	indicesChoisis := []int{}
	for len(indicesChoisis) < amount {
		ind := rand.Intn(len(word))
		dejaChoisi := false
		for _, i := range indicesChoisis {
			if i == ind {
				dejaChoisi = true
				break
			}
		}
		if !dejaChoisi {
			indicesChoisis = append(indicesChoisis, ind)
			display[ind] = rune(word[ind])
		}
	}
}
